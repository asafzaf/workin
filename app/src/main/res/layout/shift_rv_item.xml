<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:clickable="true"
        android:layout_width="382dp"
        android:layout_height="141dp"
        android:layout_margin="5dp"
        android:elevation="8dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <!--text view for our course name-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idTVshiftDATE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text="Date:"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/idTVstartTime"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Start:"
                    android:textColor="@color/black"
                    android:textColorHint="@color/cardview_light_background" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!--text view for our course tracks-->

                <TextView
                    android:id="@+id/idTVCompanyName"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Company:"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/idTVshiftLOCATION"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text="Location:"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/idTVendTime"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="End:"
                    android:textColor="@color/black"
                    android:textColorHint="@color/cardview_dark_background" />


                <!--text view for our course duration-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idTVshiftProject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text="Project:"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/idTVshiftDuration"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Duration:"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0
    ">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/idTVshiftDescription"
                            android:layout_width="match_parent"
                            android:layout_height="61dp"
                            android:layout_weight="0
            "
                            android:padding="3dp"
                            android:text="Description:"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <!--text view for our course description-->

        </LinearLayout>

    </androidx.cardview.widget.CardView>

